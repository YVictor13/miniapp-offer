page {
  height: auto;
  font-family: "Microsoft YaHei";
  background-color: white;
  font-size: 25rpx;
}

.container {
  margin: 2rpx;
}

.personInformation {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: auto;
}

.avatar {
  width: 300rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.avatar image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 2rpx solid #ccc;
}

.item {
  display: flex;
  flex-direction: row;
  padding: 10px;
  background: white;
  border-bottom: 0.5px solid lightgrey;
  width: 100%;
}

.left-text {
  font-size: 15px;
  /*撑开label两边部分的距离*/
  flex: 1;
  /*垂直居中*/
  margin: auto;
}

.right-text {
  font-size: 15px;
  /*垂直居中*/
  margin: auto;
}

.item input {
  width: 50%;
  text-align: right;
  font-size: 15px;
  
}

.buttom {
  background-color: #09f;
  margin-top: 8px;
  color: #eee;
}