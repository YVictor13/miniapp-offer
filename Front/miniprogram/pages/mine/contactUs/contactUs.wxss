.container {
  margin-bottom: 30px;
  font-family: "Helvetica Neue", "Hiragino Sans GB", "Microsoft YaHei", "\9ED1\4F53", Arial, sans-serif;
  font-size: 30rpx;
  color: #888;
  display: flex;
  flex-direction: column;
}

.header {
  width: 100%;
  height: 400rpx;
}

.header image {
  width: 100%;
  height: 400rpx;
}


.contact {
  font-size: 30rpx;
  min-height: 100rpx;
  line-height: 100rpx;
  border: 1px solid #eee;
  border-radius: 5px;
  width: 99%;
  word-break: break-all;
  margin: auto;
  color: #999;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.email {
  width: 28%;
  text-align: right;
  font-size: 30rpx;
  float: left;
  margin-right: 10rpx;
}

.email text {
  width: 70%;
  vertical-align: middle;
  font-size: 30rpx;
}

.text{
  vertical-align: middle;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}